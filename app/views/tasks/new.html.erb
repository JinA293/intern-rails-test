<div class="ml-5">
  <h2>タスク作成</h2><br>
  <div class="bg-warning">
    <% @task.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>
  </div>

  <%= form_with url: "/tasks", method: :post, local: true do |form| %>
    <%= form.label "タイトル"%><br>
    <%= form.text_field :title, value: @task.title %><br><br>
    <%= form.label "ステータス"%><br>
    <%= form.select :status, Task::STATUS.to_a, { default: @task.status || Task::STATUS[:todo]}, { class: "form-select","aria-label": "Default select example"} %><br><br>
    <%= form.label "タスク詳細"%><br>
    <%= form.text_area :description, value: @task.description, size: "100x10" %><br>
    <%= form.label "期限"%><br>
    <%= form.date_field :due_date, value: @task.due_date%><br>
    <%= form.submit "作成", class: "btn btn-primary btn-sm mt-5"  %>
  <% end %>
</div>