<!DOCTYPE html>
<html>
  <head>
    <title>InternRailsTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |message_type, message| %>
      　　<div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <ul class="nav nav-tabs mb-5">
      <li class="nav-item">
        <%= link_to("一覧", {controller: :tasks, action: :index}, {class: "nav-link", "aria-current": "page"}) %>
      </li>
      <li class="nav-item">
        <%= link_to("作成", {controller: :tasks, action: :new}, {class: "nav-link"}) %>
      </li>
    </ul>
    <%= yield %>
  </body>
</html>
